<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Title Section -->
    <TextView
        android:id="@+id/TitleInfoMedoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/defaultMedocNameInDetails"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Spacer -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp"
        app:layout_constraintTop_toBottomOf="@+id/TitleInfoMedoc" />

    <!-- Medication Information Section -->
    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/voirPlusInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TitleInfoMedoc"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- Dosage and Unit Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/border">


                <TextView
                    android:id="@+id/dosageInfoMedoc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/dosageDetailMedoc" />

                <TextView
                    android:id="@+id/dosageUniteInfoMedoc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/uniteDetailMedoc" />
            </LinearLayout>

            <!-- Spacer -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- Type and Remaining Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/typeComprimeInfoMedoc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/typeComprimeDetailMedoc" />

                <TextView
                    android:id="@+id/comprimeRestantInfoMedoc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/restantsDetailMedoc" />
            </LinearLayout>

            <!-- Spacer -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- Quantity Section -->
            <TextView
                android:id="@+id/quantiteInfoMedoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quantiteDetailMedoc" />

            <!-- Spacer -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- Dates and Times Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/debutTraitementInfoMedoc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/debutTraitementDetailMedoc" />

                <TextView
                    android:id="@+id/dateFinTraitementInfoMedoc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/finTraitementDetailMedoc" />

            </LinearLayout>

            <TextView
                android:id="@+id/expireInfoMedoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expireDetailMedoc" />

            <!-- Spacer -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- Additional Information Section -->
            <TextView
                android:id="@+id/effetsSecondairesInfoMedoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/effetsSecondairesDetailMedoc" />

            <TextView
                android:id="@+id/prisesInfoMedoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prisesDetailMedoc" />

            <!-- Spacer -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- New Elements Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/principeActifnfoMedoc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/principeActifDetailMedoc" />

                <TextView
                    android:id="@+id/denominationPrincipeInfoMedoc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/denominationPrincipeDetailMedoc" />
            </LinearLayout>

            <TextView
                android:id="@+id/dosageSubstanceInfoMedoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dosageSubstanceDetailMedoc" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/formePharmaceutiqueInfoMedoc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/formePharmaceutiqueDetailMedoc" />

                <TextView
                    android:id="@+id/voieAdministrationInfoMedoc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/voieAdministrationDetailMedoc" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/voirPlusInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:text="@string/voirPlusInformations"
        android:textColor="@color/lightBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageLienExterne" />

    <ImageView
        android:id="@+id/imageLienExterne"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/lien_externe" />


</androidx.constraintlayout.widget.ConstraintLayout>
